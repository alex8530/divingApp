<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <!--<solid android:color="@color/blueColor"/>-->
            <gradient android:startColor="#49c2c5"
                android:endColor="#2980ba"
                android:angle="0"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <!--<solid android:color="@color/disabledButton" />-->

            <gradient android:startColor="#2980ba"
                android:endColor="#49c2c5"
                android:angle="0"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle" >
            <!--<solid android:color="@color/mBlueWhite" />-->
            <gradient android:startColor="#49c2c5"
                android:endColor="#2980ba"
                android:angle="0"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>