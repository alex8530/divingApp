            android:textColor="#1c608d"
            android:gravity="end"
            android:layout_marginTop="29dp"
            android:textStyle="bold"

            android:text="رحلاتي"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#e5e5e5"/>

