<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.diverapp.diverapp.PDiver.Checkout_ProDiverFragment">

<!-- todo add focaus-->

    <LinearLayout
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@drawable/bk_button_shape"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_height="wrap_content">


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_basket"
                android:layout_marginRight="10dp"
                android:id="@+id/cart"
 />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:src="@drawable/ic_categories"

              />
        </LinearLayout>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"

                android:src="@drawable/ic_back_btton_right"
                android:layout_marginEnd="37dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingRight="37dp"
            android:paddingLeft="37dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="#1c608d"
                android:text="اختر طريقة الدفع :"

                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"

               />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="right"
                android:layout_gravity="right"

                android:textDirection="rtl"
                android:orientation="vertical">


                <RadioButton
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textDirection="rtl"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:background="?android:selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:textColor="@color/white_green_selector"

                    android:drawablePadding="15dp"

                    android:text="PayPal"/>


                <RadioButton
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"

                    android:textColor="@color/white_green_selector"
                    android:layout_gravity="right"
                    android:textDirection="rtl"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:background="?android:selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="15dp"
                    android:text="البطاقة الإئتمانية (فيزا - ماستر كارد)"/>


                <RadioButton
                    android:textStyle="bold"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:textColor="@color/white_green_selector"
                    android:layout_gravity="right"
                    android:textDirection="rtl"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:background="?android:selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="15dp"
                    android:text="بطاقة مدى"/>

            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="38"
            android:paddingRight="37dp"
            android:paddingLeft="37dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textDirection="rtl"
                    android:textColor="#1c608d"
                    android:textSize="17sp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:text="الإجمالي"/>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textDirection="rtl"
                android:textSize="17sp"
                android:textColor="#0d912c"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:text="ر.س 230"/>

            </android.support.constraint.ConstraintLayout>



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textDirection="rtl"
                    android:textColor="#1c608d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:text="الإجمالي النهائي"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textDirection="rtl"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#0d912c"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:text="ر.س 230"/>

            </android.support.constraint.ConstraintLayout>



            <Button
                android:layout_marginTop="26dp"
                android:id="@+id/button_start_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ارسال كود التحقق"
                android:background="@drawable/bk_button_shape"
                android:padding="10dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@drawable/button_text"

                android:textSize="18sp"
                android:gravity="center"

                />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>