<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:background="#f5f6f5"
    tools:context="com.diverapp.diverapp.PDiver.EditProfile">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@drawable/bk_button_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_height="wrap_content">


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_basket"
                android:layout_marginRight="10dp"
                android:id="@+id/cart"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"

                android:src="@drawable/ic_categories"

                />
        </LinearLayout>


        <ImageView
            android:layout_width="12dp"
            android:layout_height="21dp"

            android:src="@drawable/ic_back_btton_right"
            android:layout_marginEnd="37dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="88"
        android:paddingRight="37dp"
        android:orientation="vertical"
        android:paddingLeft="37dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#34beb8"
                android:text="البيانات الشخصية"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="الإسم :"
                 android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                 android:gravity="right"
                android:text="محمد محمد"
                android:backgroundTint="#BFBFBF"
                 android:textColor="#154968"
               />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="رقم الجوال :"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_height="wrap_content">


    <Button
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="31dp"
        android:text="أضف جديد"
        android:background="@drawable/bk_button_shape2"
        android:textColor="#ffffff"
        android:textSize="12sp"
         android:fontFamily="@font/helveticaneuew23forsky_reg"


        />

    <EditText
        android:layout_width="0dp"
        android:layout_weight="60"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:maxLines="1"
        android:fontFamily="@font/helveticaneuew23forsky_reg"
        android:textSize="15sp"
        android:inputType="phone"
        android:gravity="right"
        android:text="+966 55 555 555"
        android:backgroundTint="#BFBFBF"
        android:textColor="#154968"
        />



</LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="تاريح الميلاد:"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                android:gravity="right"
                android:text="1991.12.08"
                android:backgroundTint="#BFBFBF"
                android:textColor="#154968"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="الهوية الشخصية \ الإقامة :"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_weight="40"
                android:layout_marginTop="12dp"
                android:layout_height="31dp"
                android:text="إختر الملف"
                android:background="@drawable/bk_button_shape2"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:layout_gravity="right"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="#1c608d"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#34beb8"
                android:text="حساب مُحترف الغوص"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="بيانات حسابك في PayPal :"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                android:gravity="right"
                android:hint="أدخل PayPal Client ID الخاص بك"
                android:backgroundTint="#bfbfbf"
                android:textColor="#154968"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="البايو ( نبذه عني ) :"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                android:gravity="right"
                android:text="أنا محمد غواص محترف…"
                android:backgroundTint="#BFBFBF"
                android:textColor="#154968"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="رخصة الغوص الخاصة بي:"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="13"
                     android:layout_height="31dp"
                    android:text="+"
                    android:background="@drawable/bk_button_shape2"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:fontFamily="@font/helveticaneuew23forsky_reg"
                    android:layout_gravity="right"

                    />
                <View
                    android:layout_width="13dp"
                    android:layout_height="31dp"/>

                <android.support.constraint.ConstraintLayout

                    android:layout_height="wrap_content"

                    android:layout_width="0dp"
                    android:layout_weight="950"
                    >
                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinner"
                        android:layout_height="31dp"
                        android:background="@drawable/spinner_bg_new1"
                        android:paddingEnd="17dp"
                        android:paddingStart="17dp"
                        android:textAlignment="textEnd"
                        android:entries="@array/country_arrays"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_"
                        android:layout_marginStart="18dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />




                </android.support.constraint.ConstraintLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="منظمة الغوص:"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                android:gravity="right"
                android:text="منظمة الغواصين المحترفين"
                android:backgroundTint="#BFBFBF"
                android:textColor="#154968"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#a3a3a3"
                android:text="مستوى الرخصة:"
                android:layout_gravity="right"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:textSize="15sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:layout_marginRight="-4dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textSize="15sp"
                android:gravity="right"
                android:text="عميقه"
                android:backgroundTint="#BFBFBF"
                android:textColor="#154968"
                />

            <Button
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"

                android:id="@+id/button_start_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ ملفي الشخصي"
                android:background="@drawable/bk_button_shape"
                android:padding="10dp"
                android:fontFamily="@font/helveticaneuew23forsky_reg"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textColor="@drawable/button_text"

                android:textSize="18sp"
                android:gravity="center"

                />




        </LinearLayout>

    </ScrollView>


</LinearLayout>
